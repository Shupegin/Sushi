<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //стиль группы картой/наличными
    <style name="RadioGroup" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/radio_group</item>
    </style>

    //стиль кнопок картой/наличными
    <style name="RadioButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/radiobutton_selector</item>
        <item name="android:textColor">#123456</item>
        <item name="android:textSize">16sp</item>

    </style>


    \\стиль диалогового окна (добавить блюдо)
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:background">@drawable/okrugl_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    \\подстиль диалогового окна (добавить блюдо)
    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_left_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_side</item>
    </style>


    //стиль мальеньких кнопок
    <style name="ButtonBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Text"> //основа
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
    </style>



    //стиль крупных кнопок
    <style name="ButtonCeep" parent="TextBody">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="TextHeader" parent="Text">  //стиль заголовков
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="TextHeader2">  //стиль подзаголовков
        <item name="android:textColor">@color/header</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">5dp</item>
        <item name="android:layout_marginTop">2dp</item>


    </style>

    <style name="TextBody" parent="Text" tools:ignore="DuplicateDefinition"> //стиль обычного текста
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody2"> //стиль мелкого текста
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>
