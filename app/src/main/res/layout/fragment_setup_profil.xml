<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginStart="15dp"
        android:layout_centerHorizontal="true"
    android:background="@drawable/okrugl_bacgr"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        tools:context=".fragment.SetupProfilFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="@color/colorUltramarine"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Новый профиль:"/>

        <EditText
            android:hint="Имя"
            android:gravity="center"
            android:id="@+id/name_edite_text"
            android:layout_width="390dp"
            android:layout_height="50dp"/>

        <EditText
            android:hint="Номер телефона"
            android:gravity="center"
            android:id="@+id/phone_edite_text"
            android:layout_width="390dp"
            android:layout_height="50dp"/>

        <EditText
            android:hint="Дата рождения"
            android:gravity="center"
            android:id="@+id/birthday_editetext"
            android:inputType="date"
            android:layout_width="390dp"
            android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

    <Button
        android:id="@+id/btn_done_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/okrugl_button"
        android:fontFamily="@font/font"
        android:textColor="@color/colorUltramarine"
        android:textStyle="bold"
        android:layout_weight="2"
        android:text="Сохранить" />

        <Button
            android:id="@+id/btn_cancel_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:background="@drawable/okrugl"
            android:fontFamily="@font/font"
            android:textColor="@color/colorUltramarine"
            android:textStyle="bold"
            android:text="Отмена" />

    </LinearLayout>
</LinearLayout>