<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfilFragment">




   <TextView
       android:id="@+id/personal_account_text"
       android:layout_centerHorizontal="true"
       android:text="Профиль"
       android:textColor="#000000"
       android:textSize="30dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/personal_account_text"
        android:id="@+id/liner_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_text"
            android:text="Дмитрий"
            android:layout_marginStart="10dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_below="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />


        <ImageView
            android:background="@drawable/ic_settings_black_24dp"
            android:id="@+id/btn_setup"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp" />

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/liner_profil"
        android:id="@+id/liner_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address_text"
            android:text="Адреса доставки"
            android:layout_marginStart="10dp"
            android:textSize="25dp"
            android:layout_below="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />


        <TextView
            android:text="5"
            android:layout_marginStart="100dp"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp" />

    </LinearLayout>







    <TextView
        android:id="@+id/order_history_text"
        android:text="Истроия заказов"
        android:layout_marginStart="10dp"
        android:textSize="25dp"
        android:layout_below="@+id/liner_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" />





</RelativeLayout>