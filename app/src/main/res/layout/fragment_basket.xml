<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasketFragment">


    <TextView
        android:id="@+id/txt_hello_basket"
        android:text="Привет, я корзина"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/basket_recyclerview"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout_prise_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basket_recyclerview"
        android:layout_alignParentRight="true"
        android:background="@drawable/okrugl"
        android:layout_margin="3dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_prise_total_basket_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="итого "/>

        <TextView
            android:id="@+id/txt_prise_total_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="100"/>

        <TextView
            android:id="@+id/txt_prise_total_basket_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text=" руб."/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_registratoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Заказать" />



</RelativeLayout>