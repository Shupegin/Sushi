<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:padding="7dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:padding="7dp"
        android:layout_height="wrap_content">



        <ImageView
            android:background="@drawable/background_menu"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>


        <TextView
            android:id="@+id/checkBoxItem"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>



        <TextView
            android:id="@+id/text_roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUltramarine"
            android:text="HEY"
            android:textSize="22dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/discription_text"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:text="Описание"/>

            <TextView
                android:id="@+id/txt_roll_price"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSky"
                android:background="@drawable/okrugl"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:text="100 руб"/>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>