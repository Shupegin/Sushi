<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="7dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_dish_menu"
            android:background="@drawable/background_dish"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="7dp"
            android:layout_margin="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_dish_menu"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/image_dish_menu">

            <TextView
                android:id="@+id/text_roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorUltramarine"
                android:layout_margin="2dp"
                android:text="HEY"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/discription_text"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textColor="@color/colorBlue"
                android:layout_margin="2dp"
                android:layout_below="@+id/text_roll"
                android:text="Описание"/>

            <TextView
                android:id="@+id/txt_roll_price"
                android:textSize="16dp"
                android:layout_width="120dp"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSky"
                android:background="@drawable/okrugl_button"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="100 руб"/>

        </LinearLayout>

        <TextView
            android:id="@+id/checkBoxItem"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="7dp"
            android:layout_height="120dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>