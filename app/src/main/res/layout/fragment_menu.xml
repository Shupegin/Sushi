<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuFragment">


    <RelativeLayout
        android:id="@+id/liner_btn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/location_btn"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:text="ваш адрес"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/okrugl_bacgr">

        <TextView
            android:id="@+id/txt_header_basket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="@color/colorUltramarine"
            android:gravity="center"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:text="Авокадо"/>

        <TextView
            android:id="@+id/txt_header_slogan_basket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/qgrayAdditionalFont"
            android:gravity="center"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/txt_header_basket"
            android:text="доставка по-настоящему вкусной еды"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cat_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/okrugl_light_green"
        android:layout_below="@+id/layout_title"
        android:padding="5dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight= "20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="10dp"
            android:layout_toLeftOf="@+id/btn_cat_menu"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_menu_green" />

        <TextView
            android:id="@+id/btn_cat_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16sp"
            style="@style/TextBody2"
            android:textStyle="normal"
            android:textColor="@color/qgreen"
            android:text="выбрать категорию блюд" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@+id/btn_cat_menu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_menu_green" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/cat_menu"
        android:id="@+id/recyclerview_category"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/recyclerview_category"
        android:id="@+id/recycler_view_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:layout_marginTop="5dp">
    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progress_two"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>