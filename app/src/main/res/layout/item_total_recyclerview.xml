<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name_dish_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/number_total"
        android:text="Название блюда"
        />

    <TextView
        android:id="@+id/number_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@+id/pieces_total"
        android:layout_marginLeft="10dp"
        android:text="1"
        />

    <TextView
        android:id="@+id/pieces_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:textStyle="normal"
        android:layout_toLeftOf="@+id/cost_total"
        android:text=" шт.  " />

    <TextView
        android:id="@+id/cost_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@id/banknote_total"
        android:text="100"
        />

    <TextView
        android:id="@+id/banknote_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:textStyle="normal"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toStartOf="@+id/new_cost_total"
        android:layout_toLeftOf="@+id/new_cost_total"
        android:text=" р."/>

    <ImageView
        android:id="@+id/img_roll_prise_total"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toStartOf="@+id/new_cost_total"
        android:layout_toLeftOf="@+id/new_cost_total"
        android:background="@drawable/ic_line"/>

    <TextView
        android:id="@+id/new_cost_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@+id/new_cost_r_total"
        android:layout_toStartOf="@+id/new_cost_r_total"
        android:text="50"/>

    <TextView
        android:id="@+id/new_cost_r_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="p."/>

</RelativeLayout>