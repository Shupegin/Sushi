<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/whitecolor"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

    <ImageView
        android:id="@+id/img_dish_basket"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_dish"/>

    <TextView
        android:id="@+id/txt_name_dish_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorUltramarine"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="2dp"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/img_dish_basket"
        android:text="Название блюда"/>

    <TextView
        android:id="@+id/txt_description_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSky"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/img_dish_basket"
        android:layout_below="@+id/txt_name_dish_basket"
        android:text="Описание"/>

    <TextView
        android:id="@+id/txt_prise_dish_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorUltramarine"
        android:layout_toLeftOf="@+id/txt_prise_dish_basket_r"
        android:layout_marginTop="2dp"
        android:text="100"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_prise_dish_basket_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorUltramarine"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:text=" руб"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_minus_basket"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_toLeftOf="@+id/txt_value_basket"
        android:layout_below="@+id/img_dish_basket"
        android:text="-"/>

    <TextView
        android:id="@+id/txt_value_basket"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorUltramarine"
        android:textSize="20dp"
        android:layout_below="@+id/img_dish_basket"
        android:layout_toLeftOf="@+id/btn_plus_basket"
        android:layout_margin="7dp"
        android:text="1" />

    <Button
        android:id="@+id/btn_plus_basket"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_dish_basket"
        android:text="+" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>